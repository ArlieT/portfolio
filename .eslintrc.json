{
  "extends": ["next/core-web-vitals", "airbnb", "airbnb-typescript"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": "warn", // max line length
    "react/require-default-props": "off", // default values on props
    "react/react-in-jsx-scope": "off", // react is always in scrope
    "react/jsx-one-expression-per-line": "off", // multiple expressions on a single line
    "@typescript-eslint/no-unused-vars": "warn",
    "react/jsx-no-constructed-context-values": "off",
    "eslint-plugin-vue/require-default-prop": "off",
    "linebreak-style": "off",
    "object-curly-newline": "off",
    "operator-linebreak": "off"
  }
}
